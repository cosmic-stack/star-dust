---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
  tagline="About us"
  image={{
    src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    alt: 'Cosmic Stack Team',
  }}
>
  <Fragment slot="title">
    Welcome to <span class="text-accent dark:text-white highlight">Cosmic Stack</span>
  </Fragment>

  <Fragment slot="subtitle">
    We are a dynamic, forward-thinking technology company dedicated to elevating your digital presence and operational efficiency. 
    Founded by a visionary entrepreneur, we partner with businesses to transform ideas into production-ready projects and innovative digital experiences.
  </Fragment>
</Hero>
<Stats
  title="Our Global Impact"
  stats={[
    { title: 'Enterprise Clients', amount: '200+' },
    { title: 'Cloud Deployments', amount: '1.2K' },
    { title: 'Success Rate', amount: '99.9%' },
    { title: 'Team Members', amount: '85+' },
  ]}
/>

<Features2
  title="Recognition & Achievements"
  subtitle="Leading the technology innovation landscape"
  columns={3}
  items={[
    {
      title: 'AWS Advanced Partner',
      description: 'Certified expertise in cloud architecture and implementation',
      icon: 'tabler:award',
    },
    {
      title: 'ISO 27001 Certified',
      description: 'Highest standards in information security management',
      icon: 'tabler:shield-check',
    },
    {
      title: 'G2 Top Performer 2023',
      description: 'Ranked in top cloud solutions providers with 4.8/5 customer satisfaction',
      icon: 'tabler:star',
    },
  ]}
/>
<Steps2
  title="Our Core Values"
  subtitle="At Cosmic Stack, we believe in delivering excellence through our fundamental principles"
  items={[
    {
      title: 'Innovation',
      description: 'Constantly pushing boundaries and embracing new technologies to deliver cutting-edge solutions.',
    },
    {
      title: 'Collaboration',
      description: 'Working closely with our clients to ensure their vision is realized through our technical expertise.',
    },
    {
      title: 'Excellence',
      description: 'Maintaining the highest standards in every project we undertake, from development to delivery.',
    },
  ]}
/>
<Features3
  columns={3}
  isAfterContent={true}
  items={[
    {
      title: 'Enterprise Solutions',
      description: 'Robust and scalable platforms built for large organizations, featuring advanced security protocols, custom workflows, and seamless third-party integrations.',
      icon: 'tabler:building-skyscraper',
    },
    {
      title: 'Digital Marketing',
      description: 'Data-driven marketing solutions with built-in SEO optimization, conversion tracking, and comprehensive analytics dashboards.',
      icon: 'tabler:chart-arrows',
    },
    {
      title: 'Cloud Infrastructure',
      description: 'Modern cloud architecture leveraging AWS, Azure, and GCP for maximum performance, reliability, and global scalability.',
      icon: 'tabler:cloud',
    },
    {
      title: 'AI Integration',
      description: 'Cutting-edge artificial intelligence solutions for process automation, predictive analytics, and intelligent decision-making systems.',
      icon: 'tabler:brain',
    },
    {
      title: 'Mobile Development',
      description: 'Cross-platform mobile applications built with React Native and Flutter, delivering native performance with single codebase efficiency.',
      icon: 'tabler:device-mobile',
    },
    {
      title: 'DevOps Excellence',
      description: 'Streamlined CI/CD pipelines, container orchestration, and infrastructure as code for rapid, reliable software delivery.',
      icon: 'tabler:refresh',
    },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
    alt: 'Technology Solutions',
  }}
/>


  <!-- Features2 Widget ************** -->

  <Features2
  title="Technical Support"
  tagline="Contact us"
  columns={2}
  items={[
    {
      title: 'Chat with us',
      description:
        'Connect instantly with our dedicated support team via live chat. Weâ€™re here to answer your questions and resolve your issues quickly.',
      icon: 'tabler:messages',
    },
    {
      title: 'Call us',
      description:
        'Speak directly with our expert support team over the phone. Our friendly staff is ready to help you navigate any technical challenges.',
      icon: 'tabler:headset',
    },
  ]}
/>

</Layout>
