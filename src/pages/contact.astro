---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Cosmic Stack',
};
---

<Layout metadata={metadata}>
  <HeroText 
    tagline="Let's Connect" 
    title="Transform Your Ideas Into Reality"
  />

  <ContactUs
    title="Start Your Digital Journey"
    subtitle="Ready to elevate your business with cutting-edge technology solutions? Our team of experts is here to help you achieve your goals."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      }
    ]}
    textarea={{
      label: 'Tell us about your project',
    }}
    disclaimer={{
      label: 'By submitting this form, you agree to our privacy policy and allow us to contact you regarding your inquiry.',
    }}
    description="We typically respond within 24 hours during business days."
  />

  <Features2
    title="Connect With Our Teams"
    items={[
      {
        title: 'Enterprise Solutions',
        description: 'For large-scale digital transformation projects and cloud infrastructure consultations.',
        icon: 'tabler:building-skyscraper',
      },
      {
        title: 'Development Team',
        description: 'For technical discussions about web, mobile, and AI development projects.',
        icon: 'tabler:code',
      },
      {
        title: 'Email',
        description: 'contact@cosmicstack.org',
        icon: 'tabler:mail',
      },
      {
        title: 'Global Headquarters',
        description: 'San Francisco, California',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Business Hours',
        description: '24/7 Support for Enterprise Clients',
        icon: 'tabler:clock',
      },
      {
        title: 'Emergency Support',
        description: 'Priority response for critical systems',
        icon: 'tabler:urgent',
      },
    ]}
  />
</Layout>