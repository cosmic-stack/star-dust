---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Cosmic Stack',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Welcome to cosmic stack, A home where projects gets elivated"
    actions={[
      {
        variant: 'primary',
        // target: '_blank',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:rocket',
      },
      { text: 'Learn more', href: '/about', icon: 'tabler:book' },
    ]}
  >
    <Fragment slot="title">
      Grow your business with <span
        class="text-accent dark:text-white highlight">us</span
      > create production ready projects with us with our experienced team
    </Fragment>

    <Fragment slot="subtitle">
      Step into the spotlight with <span class="font-semibold">Astrowind</span> templates, your pathway to fortifying
      your startup's digital footprint, fostering credibility, and expanding your reach.
    </Fragment>

    <!-- <Fragment slot="image">
      <div class="relative h-0 pb-[56.25%]">
        <iframe
          width="560"
          height="315"
          src="https://www.youtube.com/embed/dsTXcSeAZq8"
          title="YouTube video player"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
          allowfullscreen
          class="absolute top-0 left-0 w-full h-full"
        >
        </iframe>
      </div>
    </Fragment> -->
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="About us"
    subtitle="At Cosmic Stack, we are not just a company; we are your partners in innovation, growth, and success. We are a dynamic and forward-thinking startup with a passion for creating"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Features2
  title="Why Leading Enterprises Choose Cosmic Stack"
  subtitle="Delivering enterprise-grade solutions that drive digital transformation"
  items={[
    {
      title: 'Cloud Architecture Excellence',
      description: 'Leverage our expertise in AWS, Azure, and GCP to build scalable, secure cloud infrastructures that power your business growth.',
      icon: 'tabler:cloud-computing',
    },
    {
      title: 'AI & Machine Learning',
      description: 'Transform your data into actionable insights with our custom AI solutions, from predictive analytics to automated workflows.',
      icon: 'tabler:brain',
    },
    {
      title: 'Enterprise Security',
      description: 'Bank-grade security protocols and compliance measures ensure your systems and data are protected at every layer.',
      icon: 'tabler:shield-lock',
    },
  ]}
/>


  <!-- Brands Widget ****************** -->

  <Brands
    title="Partnerships & Collaborations"
    subtitle="At Astrowind, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
